
@{
    ViewBag.Title = "Edit";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        <strong>@TempData["message"]</strong>
    </div>
}

<br />
<br />
<br />

<section class="container">
    <div class="panel panel-primary">
        <div class="panel-heading"> Event Details </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post" action="~/Client/update">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email"> Client Email :</label>
                    <div class="col-sm-10">
                        <input type="text" name="email" id="email" class="form-control" />

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="address"> New Address :</label>
                    <div class="col-sm-10">
                        <input type="text" name="address" id="address" class="form-control" />

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="phone"> New Phone:</label>
                    <div class="col-sm-10">
                        <input type="text" name="phone" id="phone" class="form-control" />

                    </div>
                </div>



                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<table class=" table">

    <th> Client Email</th>
    <th> Full Name </th>
    <th> Address </th>
    <th> Age </th>
    <th> Phone </th>

    </tr>

    @foreach (var i in Model)
    {
        <tr>
            <td>@i.email</td>
            <td>@i.fullName</td>
            <td>@i.address</td>
            <td>@i.age</td>
            <td>@i.phone</td>

        </tr>
    }

</table>

