@model OnlineRegistration.Models.Client

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<br />

<section class="container">
    <div class="panel panel-primary">
        <div class="panel-heading"> Client Information </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post" action="~/Client/index">

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email"> Client Email:</label>
                    <div class="col-sm-10">
                        <input type="text" name="email" id="email" class="form-control">
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="fullName"> Client FullName:</label>
                    <div class="col-sm-10">
                        <input type="text" name="fullName" id="fullName" class="form-control" />
                        @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="address"> Client Address:</label>
                    <div class="col-sm-10">
                        <input type="text" name="address" id="address" class="form-control" />
                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="age">  Client Age:</label>
                    <div class="col-sm-10">
                        <input type="text" name="age" id="age" class="form-control" />
                        @Html.ValidationMessageFor(model => model.age, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="phone"> Client Phone:</label>
                    <div class="col-sm-10">
                        <input type="text" name="phone" id="phone" class="form-control" />
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>






