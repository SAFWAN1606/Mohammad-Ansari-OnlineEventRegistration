@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />
<section class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Search Event List </div>
        <div class="panel-body">
            <form class="form-center" method="get" action=" ~/search/index">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="eventName"> Event Name:  </label>
                    <div class="col-sm-10">
                        <input type="text" name="eventName" id="eventName" class="form-control" value="@ViewBag.eventName" />

                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="date"> Event Date:</label>
                        <div class="col-sm-10">
                            <input type="date" name="date" id="date" class="form-control"  value="@ViewBag.date"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
    <table class="table">
        <tr>
            <th> eventName</th>
            <th> description</th>
            <th> location</th>
            <th> date</th>
            <th> ticketFee</th>
        </tr>

        @foreach (var i in Model)
        {
            <tr>
                <td> @i.eventName </td>
                <td> @i.description </td>
                <td> @i.location</td>
                <td> @i.date </td>
                <td> @i.ticketFee </td>
            </tr>
        }
    </table>
</section>


